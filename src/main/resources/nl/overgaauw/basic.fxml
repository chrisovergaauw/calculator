<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.GridPane?>
<?import java.net.URL?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="nl.overgaauw.controller.BasicController"
          alignment="center" hgap="2" vgap="2">
    <padding>
        <Insets top="0" right="1" bottom="1" left="1"/>
    </padding>

    <Label fx:id="calculationDisplay" text="0" GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="4" GridPane.halignment="CENTER" minWidth="150" textAlignment="RIGHT"/>

    <Button fx:id="clear" text="C" styleClass="function"
            GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button fx:id="invert" text="+/-" styleClass="function"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button fx:id="percentage" text="\%" styleClass="function"
            GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Button fx:id="divide" text="รท" styleClass="basicOperator"
            GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Button fx:id="seven" text="7" styleClass="number"
            GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button fx:id="eight" text="8" styleClass="number"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button fx:id="nine" text="9" styleClass="number"
            GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button fx:id="times" text="x" styleClass="basicOperator"
            GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Button fx:id="four" text="4" styleClass="number"
            GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button fx:id="five" text="5" styleClass="number"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button fx:id="six" text="6" styleClass="number"
            GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Button fx:id="minus" text="-" styleClass="basicOperator"
            GridPane.columnIndex="3" GridPane.rowIndex="3"/>

    <Button fx:id="one" text="1" styleClass="number"
            GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button fx:id="two" text="2" styleClass="number"
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button fx:id="three" text="3" styleClass="number"
            GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <Button fx:id="plus" text="+" styleClass="basicOperator"
            GridPane.columnIndex="3" GridPane.rowIndex="4"/>


    <Button fx:id="zero" text="0" styleClass="number, zero"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="2" GridPane.halignment="LEFT" minWidth="75"/>
    <Button fx:id="comma" text="," styleClass="number"
            GridPane.columnIndex="2" GridPane.rowIndex="5"/>
    <Button fx:id="equals" text="=" styleClass="basicOperator, equals"
            GridPane.columnIndex="3" GridPane.rowIndex="5"/>

    <stylesheets>
        <URL value="@demo.css"/>
    </stylesheets>
</GridPane>
